@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Wishlist";
    ViewData["ActivePage"] = ManageNavPages.Wishlist;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        @if (Model.WishlistUser.Count() > 0)
        {
        <div class="row">
            @for (int i = 0; i < Model.WishlistUser.Count(); i++)
            {
                <div class="col-lg-4 d-flex align-items-stretch mb-3">
                    <div class="card h-100">
                        <img style="max-height: 200px" class="img-fluid" src="@Model.WishlistUser[i].Game.Afbeelding" />
                        <div class="card-body">
                            <p class="card-title">@Model.WishlistUser[i].Game.Naam</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        }
        else
        { <p>Er staan nog geen games op je wishlist</p>}
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}